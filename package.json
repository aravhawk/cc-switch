{
  "name": "@aravhawk/cc-switch",
  "version": "1.1.0",
  "description": "Profile manager for Claude Code settings",
  "type": "module",
  "bin": {
    "cc-switch": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "release:patch": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "profile-manager",
    "settings"
  ],
  "author": "Arav",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}
